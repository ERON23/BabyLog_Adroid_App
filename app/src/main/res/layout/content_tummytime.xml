<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="60sp"
        tools:text="0:00"
        android:textColor="@android:color/background_dark"/>

    <Button
        android:id="@+id/countdown_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/countdown_text"
        android:layout_alignStart="@+id/countdown_text"
        android:layout_below="@+id/countdown_text"
        android:layout_marginTop="49dp"
        android:text="Start" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/countdown_button"
        android:layout_alignBottom="@+id/countdown_button"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/countdown_button"
        android:layout_toRightOf="@+id/countdown_button"
        android:text="Reset"
        android:visibility="invisible"
        tools:visibility="visible" />

</RelativeLayout>